{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Iniciar",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}master.c",
            "args": [
                "10",
                "10",
                "10",
                "step",
                "static",
                "salida.bmp"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Habilitar la impresión con sangría para gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "mpiexec",
            "miDebuggerPath": "/path/to/your/gdb"
        },
        {
            "name": "mpiexec",
            "type": "shell",
            "command": "mpiexec",
            "args": [
                "-hostfile",
                "machines",
                "-np",
                "4",
                "./lifeGame",
                "10",
                "10",
                "10",
                "step",
                "static",
                "salida.bmp"
            ],
            "problemMatcher": []
        }
    ]
}
